<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:text="血糖界面"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/glu"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:text="尿酸界面"
            app:layout_constraintTop_toBottomOf="@+id/glu"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ua"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:text="血氧界面"
            app:layout_constraintTop_toBottomOf="@+id/ua"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/spo"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:text="血压界面"
            app:layout_constraintTop_toBottomOf="@+id/spo"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/Nibp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:text="尿常规界面"
            app:layout_constraintTop_toBottomOf="@+id/Nibp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/Urine"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:text="体温界面"
            app:layout_constraintTop_toBottomOf="@+id/Urine"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/Temp"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:text="身份证界面"
            app:layout_constraintTop_toBottomOf="@+id/Temp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/IDCard"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:text="心电图界面"
            app:layout_constraintTop_toBottomOf="@+id/IDCard"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ECG"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:text="血脂界面"
            android:id="@+id/bloodFat"
            app:layout_constraintTop_toBottomOf="@+id/ECG"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:text="体成分界面"
            android:id="@+id/bmi"
            app:layout_constraintTop_toBottomOf="@+id/bloodFat"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:text="单导心电界面"
            android:id="@+id/OneLeadEcg"
            app:layout_constraintTop_toBottomOf="@+id/bloodFat"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:text="总胆固醇"
            android:id="@+id/Chol"
            app:layout_constraintTop_toBottomOf="@+id/OneLeadEcg"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:text="竹信单导心电"
            android:id="@+id/zuXinEcg"
            app:layout_constraintTop_toBottomOf="@+id/Chol"
            app:layout_constraintStart_toStartOf="parent"

            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_value"
            app:layout_constraintTop_toBottomOf="@id/zuXinEcg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="23sp"
            android:text="This is a the place where the value is going show.ERRO that means fail to get the value cause something wrong check out your code to fix it ,or call the Application creator,he would help you . "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>